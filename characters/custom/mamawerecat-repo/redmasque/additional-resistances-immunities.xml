<!--Resistances-->	
	<!-- ACID -->
		<element name="Resistance (Acid)" type="Item" source="Internal" id="ID_BTC_ITEM_RESISTANCE_ACID">
			<description>
				<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
				<p>You have resistance to acid damage.</p>
			</description>
			<setters>
				<set name="category">Additional Feature</set>
				<set name="slot">misc</set>
				<set name="inventory-hidden">true</set>
			</setters>
			<rules>
				<grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_ACID" />
			</rules>
		</element>
