<!-- Acrobatics -->
	<element name="Skill Expertise (Acrobatics)" type="Item" source="Player's Handbook" id="ID_WOTC_PHB_ITEM_EXPERTISE_ACROBATICS">
		<compendium display="false" />
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
		</description>
		<setters>
			<set name="category">Additional Expertise</set>
			<set name="keywords">expertise</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
			<grant type="Proficiency" id="ID_PROFICIENCY_SKILL_ACROBATICS" />
			<stat name="acrobatics:proficiency" value="proficiency" bonus="double" />
		</rules>
	</element>

